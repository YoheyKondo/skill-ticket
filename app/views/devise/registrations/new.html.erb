  <body>
    <header>
      <%= link_to image_tag("/assets/img/logo.png", class: "h_logo img"), "/" %>
      <p>学びを、知識を、共有しよう！</p>
      <div class="h_iconList">
        <div class="h_icon">
          <%= link_to image_tag("/assets/img/bell.png"), "/" %>
        </div>
        <div class="h_icon">
          <%= link_to image_tag("/assets/img/chat.png"), "/" %>
        </div>
        <div class="h_icon">
          <%= link_to image_tag("/assets/img/person.png"), "/" %>
        </div>
      </div>
    </header>

    <main>
      <section id="SignUP">
      <!-- パンくずリスト -->
        <div class="path">
          <%= link_to 'Top', '/' %>
            <p> > </p>
          <%= link_to '会員登録', '/users/sign_up' %>
	</div>

			<!-- ステータスリスト -->
			<div class="status">
				<div class="step active">
					<p class="circle">1</p>
					<p>仮登録手続き</p>
				</div>
				<div class="st_border"></div>
				<div class="step">
					<p class="circle">2</p>
					<p>メールアドレスの確認</p>
				</div>
				<div class="st_border"></div>
				<div class="step">
					<p class="circle">3</p>
					<p>本登録</p>
				</div>
			</div>


			<div class="s_title">
				<h2>会員登録</h2>
				<div class="border"></div>

                                <!-- 入力 -->
                                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: "get", autocomplete: "off", action: "" ) do |f| %>
                                  <%= render "devise/shared/error_messages", resource: resource %>
                                  <div id="email" class="form_box">
                                    <div class="title">
                                      <%= f.label :email, "メールアドレス", {class: "sub"} %>
                                      <%= f.label :errMsg, "入力必須です。", {class: "errMsg"} %>
                                    </div>
                                    <%= f.email_field :email, {type: "email", name: "email", class: "email"}  %>
                                  </div>

                                  <div id="password" class="form_box">
                                    <div class="title">
                                      <%= f.label :password, "パスワード", {class: "sub"} %>
                                      <%= f.label :errMsg, "入力必須です。", {class: "errMsg"} %>
                                    </div>
                                    <%= f.password_field :password, {type: "password", name: "password", class: "pass"}  %>
                                  </div>

                                  <div class="form_box btn_center">
                                    <%= f.submit :submit, {type: "submit", name: "submit", class: "btn", value: "仮登録へ"} %>
                                  </div>
                                <% end %>
                                <%= render "devise/shared/links" %>
			</div>


	</main>

